{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://eigenvue.dev/schemas/step-format/v1",
  "title": "Eigenvue Step Sequence",
  "description": "Validates a complete step sequence produced by an Eigenvue algorithm generator. Version 1.",
  "type": "object",
  "required": [
    "formatVersion",
    "algorithmId",
    "inputs",
    "steps",
    "generatedAt",
    "generatedBy"
  ],
  "additionalProperties": false,
  "properties": {
    "description": {
      "type": "string",
      "description": "Optional human-readable description of this step sequence (used in fixtures)."
    },
    "formatVersion": {
      "type": "integer",
      "const": 1,
      "description": "Step format version. Must be 1 for this schema."
    },
    "algorithmId": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "minLength": 1,
      "description": "URL-safe algorithm identifier."
    },
    "inputs": {
      "type": "object",
      "description": "The input parameters that produced this sequence."
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/Step" },
      "description": "Ordered array of steps. steps[i].index must equal i."
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of generation."
    },
    "generatedBy": {
      "type": "string",
      "enum": ["typescript", "python", "precomputed"],
      "description": "Which generator produced this sequence."
    }
  },
  "$defs": {
    "Step": {
      "type": "object",
      "required": [
        "index",
        "id",
        "title",
        "explanation",
        "state",
        "visualActions",
        "codeHighlight",
        "isTerminal"
      ],
      "additionalProperties": false,
      "properties": {
        "index": {
          "type": "integer",
          "minimum": 0,
          "description": "0-based position in the sequence. Must equal the array index."
        },
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]*$",
          "minLength": 1,
          "description": "Template step identifier. Not globally unique."
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "maxLength": 200,
          "description": "Short human-readable heading."
        },
        "explanation": {
          "type": "string",
          "minLength": 1,
          "description": "Plain-language narration of what is happening."
        },
        "state": {
          "type": "object",
          "description": "Snapshot of all algorithm variables. Keys are variable names."
        },
        "visualActions": {
          "type": "array",
          "items": { "$ref": "#/$defs/VisualAction" },
          "description": "Ordered rendering instructions. May be empty."
        },
        "codeHighlight": {
          "$ref": "#/$defs/CodeHighlight"
        },
        "isTerminal": {
          "type": "boolean",
          "description": "True if and only if this is the final step."
        },
        "phase": {
          "type": "string",
          "minLength": 1,
          "description": "Optional grouping label for UI phase indicators."
        }
      }
    },
    "VisualAction": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "minLength": 1,
          "description": "Action type identifier (open vocabulary)."
        }
      },
      "additionalProperties": true,
      "description": "A single rendering instruction. Additional properties are action-specific parameters."
    },
    "CodeHighlight": {
      "type": "object",
      "required": ["language", "lines"],
      "additionalProperties": false,
      "properties": {
        "language": {
          "type": "string",
          "minLength": 1,
          "description": "Language tab identifier."
        },
        "lines": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "integer",
            "minimum": 1
          },
          "description": "1-indexed line numbers to highlight."
        }
      }
    }
  }
}

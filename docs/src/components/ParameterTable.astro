---
/**
 * ParameterTable — Renders a formatted table of function parameters
 * with name, type, default value, and description.
 *
 * Usage in MDX:
 *   <ParameterTable params={[
 *     { name: "algorithm_id", type: "str", required: true, description: "URL-safe algorithm identifier" },
 *   ]} />
 */

interface Param {
  name: string;
  type: string;
  required: boolean;
  default?: string;
  description: string;
}

interface Props {
  params: Param[];
}

const { params } = Astro.props;
---

<table>
  <thead>
    <tr>
      <th>Parameter</th>
      <th>Type</th>
      <th>Required</th>
      <th>Default</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    {params.map((p) => (
      <tr>
        <td><code>{p.name}</code></td>
        <td><code>{p.type}</code></td>
        <td>{p.required ? "Yes" : "No"}</td>
        <td>{p.default ? <code>{p.default}</code> : "—"}</td>
        <td>{p.description}</td>
      </tr>
    ))}
  </tbody>
</table>

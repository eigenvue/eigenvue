---
/**
 * ApiSignature — Renders a function signature in a styled code block
 * with an optional description label.
 *
 * Props:
 *   language — The code language for syntax highlighting ("python" | "typescript")
 *   label    — Optional label displayed above the signature (e.g., "Python" or "TypeScript")
 */

interface Props {
  language: string;
  label?: string;
}

const { language, label } = Astro.props;
---

{label && (
  <div style="font-size: var(--sl-text-sm); font-weight: 600; color: var(--sl-color-gray-3); margin-bottom: 0.25rem;">
    {label}
  </div>
)}
<div class="api-signature">
  <slot />
</div>

<style>
  .api-signature {
    margin-bottom: 1rem;
  }
  .api-signature :global(pre) {
    border-left: 3px solid var(--sl-color-accent);
  }
</style>
